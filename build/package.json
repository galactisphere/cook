{
  "name": "the-chefs-pocket",
  "productName": "the-chefs-pocket",
  "version": "0.1.0",
  "description": "A handy pocket cookbook for the amateur to the professional chef",
  "main": "index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [
    "cookbook"
  ],
  "author": {
    "name": "Jonathan Yeo",
    "email": "galactisphere@users.noreply.github.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "executableName": "the-chefs-pocket"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "the-chefs-pocket"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "bootstrap": "^4.5.0",
    "bootstrap-icons": "^1.0.0-alpha4",
    "electron-builder": "^22.7.0",
    "electron-forge": "^5.2.4",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "handlebars": "^4.7.6",
    "jquery": "^3.5.1",
    "lowdb": "^1.0.0",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.51",
    "@electron-forge/maker-deb": "^6.0.0-beta.51",
    "@electron-forge/maker-rpm": "^6.0.0-beta.51",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.51",
    "@electron-forge/maker-zip": "^6.0.0-beta.51",
    "electron": "9.0.3",
    "electron-reload": "^1.5.0",
    "node-sass": "^4.14.1",
    "electron-prebuilt-compile": "8.2.0"
  }
}
